{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "types": [
      "vitest/globals"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "vitest.config.ts"],
  "exclude": [
    "node_modules",
    "__tests__",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "src/**/*.mock.*"
  ]
}

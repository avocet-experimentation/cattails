{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "esnext",
    "types": ["vitest/globals"],
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "vitest.config.ts", "mongodb/**/*", ".eslintrc.cjs"],
  "exclude": [
    "node_modules",
    "__tests__",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "src/**/*.mock.*"
  ]
}
